.head {
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  margin-bottom: 32rpx;
}
.head .text text {
  width: 200rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.order {
  background: #fff;
}
.order .order-head {
  height: 78rpx;
  line-height: 78rpx;
  border-bottom: 1px solid #cccccc;
}
.order .order-head .text {
  font-weight: bold;
}
.order .order-content {
  height: 174rpx;
  padding-top: 16rpx;
}
.order .order-content .info {
  position: relative;
}
.order .order-content .info .image,
.order .order-content .info .text {
  position: absolute;
  top: 0;
}
.order .order-content .info .image {
  left: 0;
  width: 150rpx;
  height: 150rpx;
  background: #ccc;
}
.order .order-content .info .text {
  padding-right: 10px;
  right: 0;
  width: 500rpx;
}
.order .order-content .info .text .name {
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
}
.order .preview {
  background: #fff;
  padding-bottom: 12rpx;
}
.order .preview .price {
  color: #eb0202;
  font-size: 32rpx;
  float: right;
  margin-right: 134rpx;
}
.order .preview .selector {
  width: 208rpx;
  text-align: center;
  background: #ebebeb;
  float: right;
  margin-right: 10px;
  border-radius: 10rpx;
}
.order .preview .selector view {
  float: left;
  width: 33.33%;
  height: 60rpx;
  font-size: 28rpx;
  color: #666666;
  line-height: 60rpx;
}
.order .preview::after {
  display: block;
  height: 0;
  clear: both;
  content: '';
}
.bottom {
  position: fixed;
  bottom: 0;
  background: #fff;
  height: 100rpx;
  width: 100%;
}
.bottom .check,
.bottom .pay {
  width: 25%;
  float: left;
}
.bottom .total {
  width: 50%;
  float: left;
  text-align: right;
  padding-right: 36rpx;
}
.bottom .pay {
  color: #fff;
  background: #f87005;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}
.bottom .pay text {
  font-size: 20rpx;
}
