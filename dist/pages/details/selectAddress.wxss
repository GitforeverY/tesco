.address {
  line-height: 78rpx;
  background: #fff;
}
.address .text {
  position: relative;
}
.address .text .left-top {
  font-weight: bold;
}
.address .text .left-text {
  color: #999999;
}
.address .text .content {
  position: absolute;
  top: 0;
  left: 150rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.address .text .area {
  position: absolute;
  top: 0;
  left: 150rpx;
  color: #f87005;
}
.bottom {
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #fff;
}
.bottom view {
  width: 50%;
  box-sizing: border-box;
  float: left;
}
.bottom .cancel,
.bottom .confirm {
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
}
.bottom .cancel {
  border-right: 1px solid #eeeeee;
  color: #999999;
}
.bottom .confirm {
  color: #f87005;
}
